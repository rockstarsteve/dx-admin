<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dx.service.mapper.SysRoleMapper">


    <select id="selectRolePermissionByUserId" resultType="com.dx.service.entity.SysRole">
        select
            r.role_id,r.role_name,r.role_key
        from
            sys_role r
            left join sys_user_role ur on r.role_id=ur.user_role_id
        where
            ur.user_id = #{userId}
    </select>

</mapper>
